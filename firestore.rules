rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      let isSuperAdmin = request.auth.token.email == 'nextgenudaan@gmail.com';
      let hasAdminRole = exists(/databases/$(database)/documents/userAccess/$(request.auth.uid)) && 
                         get(/databases/$(database)/documents/userAccess/$(request.auth.uid)).data.role == 'Admin';
      return isAuthenticated() && (isSuperAdmin || hasAdminRole);
    }

    // GLOBAL ADMIN BYPASS
    // This unblocks the super admin for ALL collections immediately
    match /{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.token.email == 'nextgenudaan@gmail.com';
    }

    // --- HRMS & ACCESS MANAGEMENT ---
    
    // Employees (HRMS Users) 
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Access (Roles & Permissions)
    match /userAccess/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Access Roles (Definitions)
    match /accessRoles/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Email Credentials (Shared Accounts)
    match /emailCredentials/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // --- CRM COLLECTIONS ---
    
    match /prospects/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /teams/{document=**} {
      allow read, write: if isAuthenticated();
    }

    match /whatsappTemplates/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // System Users
    match /users/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Leads / Join Requests
    match /joinRequests/{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}